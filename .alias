alias sshr='~/sync_remote_tmux_and_vi.sh "$@"'
alias luxred='sudo ~/gitrepos/luxafor-python/luxafor-linux.py color -l 255 -r 255 -g 0 -b 0'
alias luxgreen='sudo ~/gitrepos/luxafor-python/luxafor-linux.py color -l 255 -r 0 -g 255 -b 0'
alias luxblue='sudo ~/gitrepos/luxafor-python/luxafor-linux.py color -l 255 -r 0 -g 0 -b 255'
