bindsym XF86MonBrightnessUp exec --no-startup-id ~/.i3/scripts/backlight.sh +10 # increase screen brightness
# bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 20 # decrease screen brightness
#bindsym XF86MonBrightnessDown exec --no-startup-id ~/bin/xrandr_brightness.sh minus # decrease screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.i3/scripts/backlight.sh -10 # decrease screen brightness

